    <!--    </welcome-file-list>-->

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ctrl.user.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>ctrl.home.Admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Provider</servlet-name>
        <servlet-class>ctrl.provider.Provider</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Provider</servlet-name>
        <url-pattern>/provider</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProviderModify</servlet-name>
        <servlet-class>ctrl.provider.Modify</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderModify</servlet-name>
        <url-pattern>/provider_modify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProviderDelete</servlet-name>
        <servlet-class>ctrl.provider.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderDelete</servlet-name>
        <url-pattern>/provider_delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ctrl.user.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>